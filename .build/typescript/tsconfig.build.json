{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2015",
    "outDir": "../../dist",
    "sourceMap": true,
    "module": "commonjs",
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "typeRoots": [
      "../../node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": ["../../index.ts"],
  "exclude": [
    "../../src/**/*.spec.ts",
    "../../node_modules"
  ]
}