    "version": "0.2.0",
    "configurations": [{
        "type": "node",
        "request": "launch",
        "name": "Jest All",
        "program": "${workspaceFolder}/node_modules/jest/bin/jest",
        "args": ["--config=./.build/jest/jest.config.js"],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
    }, {
        "type": "node",
        "request": "launch",
        "name": "Jest Current File",
        "program": "${workspaceFolder}/node_modules/jest/bin/jest",
        "args": ["${relativeFile}", "--config=./.build/jest/jest.config.js"],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
    }]

}